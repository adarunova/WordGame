<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <padding
                android:bottom="1.5dp"
                android:left="1dp"
                android:right="1dp" />

            <gradient
                android:startColor="#3fcfd7dc"
                android:centerColor="#5fbcc2d2"
                android:endColor="#56b4becc"/>

            <corners android:radius="30dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <gradient
                android:startColor="#3fcfd7dc"
                android:centerColor="#5fbcc2d2"
                android:endColor="#56b4becc"/>

            <corners android:radius="30dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="0.5dp"
                android:left="0.5dp"
                android:right="0.5dp" />

            <gradient
                android:startColor="#3fcfd7dc"
                android:centerColor="#5fbcc2d2"
                android:endColor="#56b4becc"/>

            <corners android:radius="30dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <gradient
                android:startColor="#3fcfd7dc"
                android:endColor="#56b4becc"/>

            <corners android:radius="30dp"/>
        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <corners android:radius="30dp"/>
        </shape>
    </item>

</layer-list>