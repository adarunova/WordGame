<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fdfdfd"
    tools:context=".LobbyActivity">

    <ImageButton
        android:id="@+id/join_game_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:adjustViewBounds="true"
        android:background="@drawable/login_button_background"
        android:elevation="7dp"
        android:padding="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_arrow_back_white" />

    <ImageView
        android:id="@+id/login_header_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-5dp"
        android:layout_marginStart="-10dp"
        android:layout_marginEnd="-100dp"
        android:adjustViewBounds="true"
        android:src="@drawable/lobby_header" />

    <TextView
        android:id="@+id/login_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_header_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/antipasto_bold"
        android:text="@string/join_the_game"
        android:textColor="#e61b1b1b"
        android:textSize="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/join_game_ll"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/antipasto_medium"
        android:text="@string/game_code"
        android:textColor="#e61b1b1b"
        android:textSize="25dp" />


    <LinearLayout
        android:id="@+id/join_game_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/join_game_code1_txt"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:fontFamily="@font/antipasto_demibold"
            android:textColor="#ff5448"
            android:textSize="28dp"
            android:gravity="center"
            android:background="@drawable/dialog_edit_view_background"/>

        <EditText
            android:id="@+id/join_game_code2_txt"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:fontFamily="@font/antipasto_demibold"
            android:textColor="#ff5448"
            android:textSize="28dp"
            android:gravity="center"
            android:background="@drawable/dialog_edit_view_background"/>

        <EditText
            android:id="@+id/join_game_code3_txt"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:fontFamily="@font/antipasto_demibold"
            android:textColor="#ff5448"
            android:textSize="28dp"
            android:gravity="center"
            android:background="@drawable/dialog_edit_view_background"/>

        <EditText
            android:id="@+id/join_game_code4_txt"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:fontFamily="@font/antipasto_demibold"
            android:textColor="#ff5448"
            android:textSize="28dp"
            android:gravity="center"
            android:background="@drawable/dialog_edit_view_background"/>

        <EditText
            android:id="@+id/join_game_code5_txt"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:fontFamily="@font/antipasto_demibold"
            android:textColor="#ff5448"
            android:textSize="28dp"
            android:gravity="center"
            android:background="@drawable/dialog_edit_view_background"/>

        <EditText
            android:id="@+id/join_game_code6_txt"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:fontFamily="@font/antipasto_demibold"
            android:textColor="#ff5448"
            android:textSize="28dp"
            android:gravity="center"
            android:background="@drawable/dialog_edit_view_background"/>

    </LinearLayout>


    <Button
        android:id="@+id/join_game_join_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/join_game_ll"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/sign_in_button_background"
        android:fontFamily="@font/antipasto_bold"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="@string/join"
        android:textColor="@android:color/white"
        android:textSize="17dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-5dp"
        android:layout_marginStart="-5dp"
        android:layout_marginEnd="-5dp"
        android:adjustViewBounds="true"
        android:src="@drawable/login_footer" />

</RelativeLayout>