<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameRulesActivity"
    android:id="@+id/rules_layout">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/game_rules_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/rules_screen_header"/>

    <ImageButton
        android:id="@+id/game_rules_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/login_button_background"
        android:elevation="7dp"
        android:padding="5dp"
        android:src="@drawable/ic_arrow_back_white"
        android:layout_gravity="center_vertical"/>

    <Button
        android:id="@+id/rules_indicator_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="35dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:padding="15dp"
        android:gravity="center"
        android:background="@drawable/sign_in_button_background"
        android:textColor="#FFFFFF"
        android:textSize="17dp"
        android:fontFamily="@font/antipasto_bold"/>

    <LinearLayout
        android:id="@+id/rules_indicator"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="35dp"
        android:padding="15dp">
    </LinearLayout>

</RelativeLayout>