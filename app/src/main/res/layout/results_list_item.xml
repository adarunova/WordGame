<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:divider="@drawable/table_columns_divider"
        android:dividerPadding="7dp"
        android:showDividers="middle">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:id="@+id/results_place"
                android:minWidth="60dp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/results_place_background"
                android:fontFamily="@font/antipasto_bold"
                android:paddingLeft="5dp"
                android:paddingTop="2dp"
                android:paddingRight="5dp"
                android:paddingBottom="2dp"
                android:textColor="#016c8c"
                android:textSize="35dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/results_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/antipasto_medium"
            android:gravity="left"
            android:padding="5dp"
            android:textColor="#658f84"
            android:textSize="35dp"/>

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:gravity="center">
        <TextView
            android:id="@+id/results_score"
            android:minWidth="60dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/results_score_background"
            android:fontFamily="@font/antipasto_bold"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            android:textColor="#016c8c"
            android:textSize="35dp"/>
        </LinearLayout>
    </TableRow>
</TableLayout>